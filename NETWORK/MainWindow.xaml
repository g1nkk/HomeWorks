<Window x:Class="NetworkProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <Label Content="Сетевое программирование" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
        <GroupBox Header="Сокеты">
            <UniformGrid Columns="2">
                <Button x:Name="ServerBtn" Content="Сервер" Margin="10 5" Padding="0 3 0 5" Click="ServerBtn_Click"/>
                <Button x:Name="ClientBtn" Content="Клиент" Margin="10 5" Padding="0 3 0 5" Click="ClientBtn_Click"/>
            </UniformGrid>
        </GroupBox>
        <GroupBox Header="Gmail" Margin="0 10 0 0">
            <UniformGrid Columns="2">
                <Button x:Name="GmailBtn" Content="Email" Margin="10 5" Padding="0 3 0 5" Click="GmailBtn_Click"/>
                <Button x:Name="GmailConfirmBtn" Content="Email (Confirm)" Margin="10 5" Padding="0 3 0 5" Click="GmailConfirmBtn_Click"/>
            </UniformGrid>
        </GroupBox>
    </StackPanel>
    
</Window>
